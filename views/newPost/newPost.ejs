<%- include("../templates/header") %>
<link rel="stylesheet" href="/newPost/newPost.css" />
</head>

<body>
  <%- include("../templates/top-navbar") %>
  <%- include("../templates/hamburger") %>
  <br>
  <div>
    <form id="form1" action="posts" method="post" enctype="multipart/form-data">
      <div class="main-content">
        <div class="heading">Select a garden to post to:*</div>
        <select name="garden">
          <% for (let i = 0; i < garden.length; i++) { %>
          <option value="garden<%- [i + 1] %>"><%= garden[i] %></option>
          <% } %>
        </select>
        <div class="heading">Photo*
          <input type="file" id="photo" name="photo">
          
        </div>
        <img id="post-photo" src="" alt="Post Photo">
        <div class="heading">Description</div>
      </div>
      <textarea type="text" id="description" name="description" placeholder="..."></textarea>
      <div class="submit">
        <button type="submit" class="btn btn-success">Submit</button>
      </div>
    </form>
  </div>

</body>

